<div class="container">

    <div class="jumbotron">
        <div class="center-text">
        <h1 class="text-center" id="title">CRUD Burgers!</h1>
        <p id="lead">Burgers you make and take away</p>
        </div>
        <br>

        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">What type of burger would you like?:</label>
                    <input type="text" id="newBurger" name="burger" style="width:35%">
                    <button type="submit" class="btn btn-warning"</button>
                </div>
            </form>
        </panel>
<hr>
    <div class="container">
        <div class="row">
            <!-- Burgers Made column -->
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="burgersMade"><strong>Burgers Made</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="eatBurger btn btn-success" data-id="{{this.id}}"
                                data-newDevoured="{{devour}}"></button>
                            <hr>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Burgers Eaten column -->
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="burgersMade"><strong>Burgers Eaten</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <hr>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>